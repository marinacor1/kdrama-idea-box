<h1>All Ideas </h1>
<p>Welcome, <%= current_user.username.capitalize %></p>
    <table>
  <tr>
  <th>Title</th>
  <th>Description</th>
</tr>
</table>
    <% @ideas.each do |idea| %>
    <table>
<tr>
<td><%= link_to idea.title, idea_path(idea) %></td>
<td><%= idea.description %></td>
</tr>
</table>
<%end  %>
<p><%= link_to("New Idea", new_idea_path(current_user)) %></p>
